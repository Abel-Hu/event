
.cell {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #eee;
    margin-top: -1rpx;
}

.cell_header {
    padding-left: 15px;
}

.cell_body {
    flex: 1;
}
.cell_footer {
    text-align: right;
    color: #D9D9D9;
}
.title {
    width: 85px;
    word-wrap: break-word;
    word-break: break-all;
}
.input {
    height: 2.58823529em;
    min-height: 2.58823529em;
    line-height: 2.58823529em;
}
.vCodeBtn {
    display: inline-block;
    height: 2.58823529em;
    margin-left: 5px;
    padding: 0 0.6em 0 0.7em;
    border-left: 1px solid #E5E5E5;
    line-height: 2.58823529em;
    vertical-align: middle;
    font-size: 17px;
    color: #3CC51F;
    white-space: nowrap;
}

.btn {
    width: 80%;
}