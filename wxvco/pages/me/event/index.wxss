/* index.wxss */

.e-cell{
    padding: 28rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.e-cell:after{
    height: 20rpx;
    background-color: #F4F4F4;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    content: "";
}

.e-cell .h-block{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.e-cell .v-block{
    display: flex;
    flex-direction: column;
}

.e-cell .eventImg{
    width: 100%;
    height: 400rpx;
    background-color: #F3F3F3;
}

.e-cell .title{
    font-size: medium;
    color: #333;
    margin-right: 15rpx;
}

.e-cell .subTitle{
    font-size: small;
    color: #999;
    margin-right: 15rpx;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
    /*width: 0;*/
    flex: 1;
}

.e-cell .status{
    font-size: medium;
    width: 30%;
    color: #333;
}

.e-cell .h-line{
    height: 1rpx;
    background: #eee;
    margin: 10rpx 0;
}

.e-cell .v-line{
    width: 1rpx;
    background: #eee;
    margin: 0 10rpx;
}

.e-cell .avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right :20rpx;
    background :#F4F4F4;
}